        return { blob: file, ext: (file.name.split('.').pop() || 'jpg').toLowerCase() };
      }

      const scale = Math.min(1, IMG_MAX_LONG_EDGE / longEdge);
      const dstW = Math.max(1, Math.round(srcW * scale));
      const dstH = Math.max(1, Math.round(srcH * scale));
